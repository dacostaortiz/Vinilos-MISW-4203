<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/performerDetailFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/performerImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/imagen_artista"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre -->
                <TextView
                    android:id="@+id/performerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:accessibilityHeading="true" />

                <!-- Tipo -->
                <TextView
                    android:id="@+id/performerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp" />

                <!-- Fecha de nacimiento (si existe) -->
                <TextView
                    android:id="@+id/performerBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- DescripciÃ³n -->
                <TextView
                    android:id="@+id/performerDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#444444" />

            </LinearLayout>
        </ScrollView>

        <!-- Carga -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:contentDescription="@string/progressBar_desc" />

    </FrameLayout>
</layout>
